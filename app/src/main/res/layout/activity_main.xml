<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/holo_red_light"
        android:fitsSystemWindows="true"
        app:title="@string/space">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_names"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/main_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

    <!--模块 上部分轮播图-->
    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/main_slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slid_height"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="党建动态"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        />
    <include
        layout="@layout/main_list_item01_01"
        android:focusable="false"
        />
    <include
        layout="@layout/main_list_item01_02"
        android:focusable="false"
        />
    <include
        layout="@layout/main_list_item02"
        android:focusable="false"
        />
    <include
        layout="@layout/main_list_item01_03"
        android:focusable="false"
        />
    <include
        layout="@layout/main_list_item01_04"
        android:focusable="false"
        />
    <include
        layout="@layout/main_list_item03"
        android:focusable="false"
        />
    <include
        layout="@layout/main_bottom"
        android:focusable="false"
        />
        </LinearLayout>
    </ScrollView>
        <LinearLayout
            android:id="@+id/main_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:gravity="center"
            >
            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"
                app:indicator="BallBeat"
                app:indicator_color="@color/holo_red_light"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在加载，请稍后..."
                />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
