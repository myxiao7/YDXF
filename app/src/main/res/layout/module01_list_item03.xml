<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/colorWhite"
    android:descendantFocusability="blocksDescendants"
    >
    <!--模块 中部内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/module01_list_item03_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="新闻标题"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

                <TextView
                    android:id="@+id/module01_list_item03_des_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="新闻简略信息"
                    android:textColor="@color/lighter_gray"
                    android:textSize="16sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/module01_list_item03_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="2015-12-22"
                        android:textColor="@color/darker_gray"
                        android:textSize="16sp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/ic_colock"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/module01_list_item03_date_tv"
                        android:layout_marginRight="5dp"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


</android.support.v7.widget.CardView>