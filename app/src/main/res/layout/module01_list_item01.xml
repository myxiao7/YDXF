<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/colorWhite"
    android:descendantFocusability="blocksDescendants"
    >
    <!--模块 中部内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/list_setlect_bg"
            >

            <ImageView
                android:id="@+id/module01_list_item01_img"
                android:layout_width="125dp"
                android:layout_height="85dp"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="fitXY"
                android:background="@mipmap/default_img"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/module01_list_item01_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="新闻标题"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/module01_list_item01_des_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="新闻简略信息"
                    android:textColor="@color/lighter_gray"
                    android:textSize="16sp" />
                    <TextView
                    android:id="@+id/module01_list_item01_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-12-24"
                    android:textColor="@color/lighter_gray"
                    android:textSize="16sp"
                    android:layout_gravity="bottom|right"
                    android:background="@color/colorWhite"/>
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>