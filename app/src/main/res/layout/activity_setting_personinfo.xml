<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/set_personinfo_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/holo_red_light"
        android:fitsSystemWindows="true"
        app:navigationIcon="@mipmap/ic_back"
        app:titleTextAppearance="@style/CustomTextAppearance"></android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/set_personinfo_icon_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/list_setlect_bg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="头像"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/set_personinfo_icon_next"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/set_personinfo_icon_img"
            android:layout_toLeftOf="@id/set_personinfo_icon_next"
            android:layout_marginRight="5dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_icon"
            app:civ_border_width="0dp"
            app:civ_border_color="@color/colorWhite"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darker_gray"
        />

    <RelativeLayout
        android:id="@+id/set_personinfo_nike_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/list_setlect_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/set_personinfo_nike_next"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            />
        <TextView
            android:id="@+id/set_personinfo_nike_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/set_personinfo_nike_next"
            android:layout_marginLeft="5dp"
            android:text="My灬xiao7"
            android:textColor="@color/darker_gray"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darker_gray"
        />

    <RelativeLayout
        android:id="@+id/set_personinfo_sex_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/list_setlect_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="性别"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/set_personinfo_sex_next"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@mipmap/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            />
        <TextView
            android:id="@+id/set_personinfo_sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/set_personinfo_sex_next"
            android:layout_marginLeft="5dp"
            android:text="男"
            android:textColor="@color/darker_gray"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darker_gray"
        />
    <RelativeLayout
        android:id="@+id/set_personinfo_username_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/list_setlect_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="账号"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/set_personinfo_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="admin"
            android:textColor="@color/lighter_gray"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darker_gray"
        />
</LinearLayout>