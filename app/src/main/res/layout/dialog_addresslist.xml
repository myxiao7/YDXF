<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_addresslist_img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@mipmap/ic_choose_pic_normal" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/dialog_addresslist_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="烟台银行高新区支行"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dialog_addresslist_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="0535-6766518"
                    android:textColor="@color/holo_red_light" />

                <TextView
                    android:id="@+id/dialog_addresslist_add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="烟台市高新区纬三路35号"
                     />

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lighter_gray"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <Button
                android:id="@+id/dialog_addresslist_cancle_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消"
                />
            <Button
                android:id="@+id/dialog_addresslist_call_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="呼叫"
            />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>