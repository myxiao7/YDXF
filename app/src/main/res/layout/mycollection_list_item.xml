<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <!--我的收藏 item项-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/mycollection_list_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏的第一条新闻"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/mycollection_list_item_date_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2015-12-30 16:20"
                />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@mipmap/ic_reply_count"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/mycollection_list_item_reply_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/mycollection_list_item_del_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="删除"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:background="@color/holo_red_light"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        />
</LinearLayout>