<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/main_list_item01_re_more1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/main_list_item01_icon1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/ic_launcher"
                android:clickable="false"
                android:focusable="false"
                />

            <TextView
                android:id="@+id/main_list_item01_column_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/main_list_item01_icon1"
                android:text="便民服务"
                android:textColor="@color/holo_red_light"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/main_list_item01_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="更多>>"
                android:textColor="@color/holo_red_light"
                android:textSize="16sp" />

        </RelativeLayout>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            ></GridView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lighter_gray"/>
        <RelativeLayout
            android:id="@+id/main_list_item01_re_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/main_list_item01_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/ic_launcher"
                android:clickable="false"
                android:focusable="false"
                />

            <TextView
                android:id="@+id/main_list_item01_column_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/main_list_item01_icon"
                android:text="便民114"
                android:textColor="@color/holo_red_light"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/main_list_item01_more_tv222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="更多>>"
                android:textColor="@color/holo_red_light"
                android:textSize="16sp" />

        </RelativeLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

        </ListView>
</LinearLayout>

</android.support.v7.widget.CardView>